# Environment Variables Template for VigorHealth
# Copy this file to .env and fill in your actual values

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Node Environment (development, production, test)
NODE_ENV=production

# Server Port
PORT=5001
BACKEND_PORT=5001
FRONTEND_PORT=3000

# Application URL
APP_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5001

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/healthassessment
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/healthassessment
MONGODB_URI=mongodb+srv://shailu446_db_user:Y3oZJZZ0Lz0NfvW9@vigorhealth214.txto8tq.mongodb.net/healthassessment

# MongoDB Docker Settings (for docker-compose)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongo-password
MONGO_DB_NAME=healthassessment
MONGO_PORT=27017

# ==============================================================================
# SECURITY & AUTHENTICATION
# ==============================================================================

# JWT Secret (use a strong, unique secret in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_EXPIRE=30d

# Session Secret
SESSION_SECRET=your-session-secret-change-this-to-something-secure

# Password Salt Rounds (10-12 recommended for production)
BCRYPT_SALT_ROUNDS=12

# Encryption Key (32 characters)
ENCRYPTION_KEY=your-32-character-encryption-key

# ==============================================================================
# CORS & NETWORKING
# ==============================================================================

# Allowed origins for CORS (comma-separated for multiple origins)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
FRONTEND_URL=http://localhost:3000

# Trust Proxy (set to true when behind a reverse proxy)
TRUST_PROXY=false

# ==============================================================================
# FILE UPLOAD SETTINGS
# ==============================================================================

# Maximum file upload size in bytes (10MB = 10485760)
UPLOAD_MAX_SIZE=10485760
MAX_FILE_SIZE=10485760

# Upload directory path
UPLOAD_PATH=./uploads

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ==============================================================================
# AI CONFIGURATION (Optional - can be configured via admin panel)
# ==============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Google Vision API for OCR
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# ==============================================================================
# EMAIL CONFIGURATION
# ==============================================================================

# Email Service Provider
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# From email address
EMAIL_FROM=noreply@vigorhealth.com

# ==============================================================================
# WOOCOMMERCE INTEGRATION (Optional - can be configured via admin panel)
# ==============================================================================

WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=your-consumer-key
WOOCOMMERCE_CONSUMER_SECRET=your-consumer-secret

# ==============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ==============================================================================

# Redis URL
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_PORT=6379

# ==============================================================================
# RATE LIMITING
# ==============================================================================

# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000

# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# GDPR COMPLIANCE
# ==============================================================================

# Data retention period in days
DATA_RETENTION_DAYS=30

# Enable automatic data deletion
AUTO_DELETE_ENABLED=true

# ==============================================================================
# LOGGING & MONITORING
# ==============================================================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Directory
LOG_DIR=./logs

# Application monitoring
SENTRY_DSN=your-sentry-dsn-here

# Google Analytics
GA_TRACKING_ID=your-ga-tracking-id

# ==============================================================================
# SSL/HTTPS CONFIGURATION
# ==============================================================================

# SSL Certificate paths (for HTTPS)
SSL_CERT_PATH=/path/to/certificate.pem
SSL_KEY_PATH=/path/to/private-key.pem

# Force HTTPS redirect
FORCE_HTTPS=false

# ==============================================================================
# DOCKER CONFIGURATION
# ==============================================================================

NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==============================================================================
# DEVELOPMENT SETTINGS (Development Only)
# ==============================================================================

# Enable debug mode
DEBUG=false

# Mock AI responses (for development/testing)
MOCK_AI_RESPONSES=false

# Disable authentication (NEVER use in production)
DISABLE_AUTH=false

# ==============================================================================
# BACKUP CONFIGURATION
# ==============================================================================

# Backup directory
BACKUP_DIR=./backups

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ==============================================================================
# HEALTH CHECK SETTINGS
# ==============================================================================

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=5