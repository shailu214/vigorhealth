# Environment Configuration
NODE_ENV=development
PORT=5001

# Database Configuration
# Replace with your actual MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&appName=appname

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d

# OpenAI Configuration (Optional - can be configured via admin panel)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Email Configuration (for report delivery)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@healthassessment.com

# WooCommerce Integration (Optional - can be configured via admin panel)
WOOCOMMERCE_URL=https://your-store.com
WOOCOMMERCE_CONSUMER_KEY=your-consumer-key
WOOCOMMERCE_CONSUMER_SECRET=your-consumer-secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# OCR Configuration
GOOGLE_VISION_API_KEY=your-google-vision-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# GDPR Compliance
DATA_RETENTION_DAYS=30
AUTO_DELETE_ENABLED=true